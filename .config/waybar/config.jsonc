{
	"layer": "top",
	"modules-left": ["hyprland/workspaces", "hyprland/window", "tray"],
	"modules-center": ["clock"],
	"modules-right": ["privacy", "network", "bluetooth", "backlight", "pulseaudio", "battery"],

    "hyprland/workspaces": {
        "tooltip": false,
        "format": "<span color=\"#f5c2e7\">{icon}</span>",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }
    },
    "hyprland/window": {
		"tooltip": false,
        "rewrite": {
            "(.*)LibreWolf": "LibreWolf",
            "OBS(.*)": "OBS"
        }
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
	
    "clock": {
        "tooltip": false,
        "format": "  {:%A - %B %d, %Y - %R}"
    },

    "privacy": {
        "tooltip": false,
        "icon-size": 18,
        "icon-spacing": 10,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": false
            },
            {
                "type": "audio-in",
                "tooltip": false
            },
            {
                "type": "audio-out",
                "tooltip": false
            }
        ]
    },
    "network": {
		"tooltip": false,
        "format": "{icon} {ifname}", 
        "format-disconnected": "󰤮",
        "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"],
        "on-click": "nm-connection-editor"
    },
    "bluetooth": {
		"tooltip": false,
        "format": "󰂯 {status}",
        "format-off": "󰂲 {status}",
        "format-disabled": "󰂲 {status}",
        "on-click": "blueman-manager"
    }, 
    "backlight": {
		"tooltip": false,
        "format": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"]
    },
	"pulseaudio": {
		"tooltip": false,
		"format": "{format_source} {icon} {volume}%",
		"format-muted": "{format_source}  {volume}%",
        "format-source": "󰍬",
        "format-source-muted": "󰍭", 
		"format-icons": {
			"default": ["", "", ""]
		},
        "on-click": "pavucontrol"
	},
    "battery": {
		"tooltip": false,
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""]
    }
}
